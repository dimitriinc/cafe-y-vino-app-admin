<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReservasDatePickerActivity">

    <ImageView
        android:id="@+id/imgCalendarConf"
        android:layout_width="157dp"
        android:layout_height="180dp"
        android:layout_marginTop="125dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_calendar" />

    <TextView
        android:id="@+id/txtDateConf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/imgCalendarConf"
        app:layout_constraintStart_toStartOf="@+id/imgCalendarConf"
        app:layout_constraintTop_toBottomOf="@+id/imgCalendarConf" />

    <ImageView
        android:id="@+id/imgReservaHoy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imgCalendarConf"
        app:layout_constraintStart_toStartOf="@+id/imgCalendarConf"
        app:layout_constraintTop_toBottomOf="@+id/txtDateConf"
        app:srcCompat="@drawable/img_hoy_button" />
</androidx.constraintlayout.widget.ConstraintLayout>