<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CuentasCanceladasDelDiaActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recCuentasCanceladas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        tools:listitem="@layout/list_item_cuenta_cancelada"
        android:layout_alignParentTop="true" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCuentasHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:srcCompat="@drawable/ic_home"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabGift_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:clickable="true"
        android:layout_alignParentStart="true"
        app:maxImageSize="60dp"
        app:srcCompat="@drawable/ic_gift"
        android:layout_above="@+id/fabCuentasHome"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        app:maxImageSize="40dp"
        android:clickable="true"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/ic_dollar"
        android:layout_above="@+id/fabGift_cancel"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabRedactHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        app:maxImageSize="35dp"
        android:clickable="true"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/ic_redact"
        android:layout_above="@+id/fabMoney"/>

</RelativeLayout>