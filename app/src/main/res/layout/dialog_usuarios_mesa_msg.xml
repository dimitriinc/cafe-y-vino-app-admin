<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_rectangular">

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="@string/new_mesa_hint"
            android:id="@+id/edt_mesa_usario"
            android:fontFamily="@font/andada"
            android:background="@drawable/shape_for_et"
            android:padding="10dp"
            android:layout_margin="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtMsg"
            android:layout_below="@+id/edt_mesa_usario"
            android:background="@drawable/shape_for_et"
            android:padding="10dp"
            android:hint="@string/msg_to_client_hint"
            android:inputType="textMultiLine"
            android:lines="3"
            android:scrollbars="vertical"
            android:layout_margin="10dp"/>


    </RelativeLayout>



</androidx.cardview.widget.CardView>