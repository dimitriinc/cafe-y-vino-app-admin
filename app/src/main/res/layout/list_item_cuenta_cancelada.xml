<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="20dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="20dp"
    android:layout_marginTop="10dp"
    android:id="@+id/parentCuentaCancel">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_for_et">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lay1Cancel">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/txtCuentaIdCancel"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/alegreya_sc"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/txtCuentaIdCancel"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_expand"
                android:id="@+id/imgExpCancel"/>



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lay2Cancel"
            android:visibility="gone"
            android:layout_below="@+id/lay1Cancel">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layRecCancel">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rec2Cancel"
                    tools:listitem="@layout/list_item_cuenta_item"
                    android:layout_margin="5dp"
                    android:layout_centerInParent="true"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/laySumCancel"
                android:layout_below="@+id/layRecCancel">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtTotalCancel"
                    android:text="Total:"
                    android:fontFamily="@font/alegreya_sc"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:textSize="16sp"
                    android:layout_toLeftOf="@+id/cardSumCancel"
                    android:layout_alignBaseline="@+id/cardSumCancel"
                    android:padding="4dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cardSumCancel"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:fontFamily="@font/alegreya_sc"
                        android:textStyle="bold"
                        android:textSize="19sp"
                        android:padding="3dp"
                        android:paddingHorizontal="3dp"
                        android:id="@+id/txtSumCancel"/>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>



            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/laySumCancel"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_wrap"
                android:id="@+id/imgColCancel"/>


        </RelativeLayout>








    </RelativeLayout>



</com.google.android.material.card.MaterialCardView>